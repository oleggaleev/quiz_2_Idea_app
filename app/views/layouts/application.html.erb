<!DOCTYPE html>
<html>
  <head>
    <title>IdeasApp</title>

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-sm navbar-dark" style="background: #008B8B">
          <a><%= link_to('Home', root_path) %></a>

          <a><%= link_to('Ideas', ideas_path) %></a>

          <a><%= link_to('Create new idea', new_idea_path) %></a>

        <% if user_signed_in? %>
          <a class='text-right'><%= link_to 'Sign Out', session_path, method: :delete %></a>

          <a class='text-right' id='fullname'>Hello, <%= current_user.first_name %> <%= current_user.last_name %></a>
        <% else %>
          <a class='text-right'><%= link_to 'Sign Up', new_user_path %></a>

          <a class='text-right'><%= link_to 'Sign In', new_session_path %></a>
        <% end %>
    </nav>
    <section>
    <%= yield %>
    </section>
  </body>
</html>
